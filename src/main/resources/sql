create table tg_user
(
    id       int primary key generated by default as identity,
    username varchar not null
);

create table Card
(
    id          int primary key generated by default as identity,
    original    varchar(30)                                   not null,
    translation varchar(30)                                   not null,
    user_id     int references tg_user (id) on delete cascade not null
);

alter table tg_user alter column id type int;
alter table tg_user add column tg_id varchar not null unique;

alter table card alter column id type int;

select * from tg_user;


delete from tg_user val where val.tg_id = '557855647'